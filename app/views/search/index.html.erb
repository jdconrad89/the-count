<div class="container">
<table class="table table-hover table-condensed">
   <h2>Possible Matches for "<%= @item %>" </h2>
  	<thead>
  		<tr>
        <th> Name</th>
        <th> Brand </th>
        <th> Calories </th>
        <th> Fat </th>
        <th> Serving Size</th>
  		</tr>
  	</thead>
  	<tbody>
      <tr>
      <% @food_items.each do |food_item| %>
  		<td> <%= food_item.name %> </td>
  		<td> <%= food_item.brand %> </td>
  		<td> <%= food_item.calories %> </td>
  		<td> <%= food_item.fat %> </td>
  		<td> <%= food_item.serving_size %> </td>
  		<td> <%=  button_to "Add to Recipe", class: "btn btn-primary" %> </td>
   </tr>
      <% end %>
   </tbody>
</table>
</div>

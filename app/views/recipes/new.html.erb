<div class="container">
  <div class="card col-md-offset-4">
    <div class="card-block">
      <%= form_for @recipe do |f| %>
      <div class="card-header">
        <h7> Please enter a name and a brief decscription to get started </h7>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class:"form-control", placeholder: :name %>
      </div>
      <div class="form-group">
        <%= f.text_field :description, class:"form-control", placeholder: :description %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Recipe!", class:'btn btn-success'  %>
        <% end %>
        <br><br>
      </div>
    </div>
  </div>
</div>
